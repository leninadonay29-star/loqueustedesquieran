Algoritmo CalcularDobleYTriple
	
    // Pedir un número al usuario 
	//y mostrar su doble 
	//y su triple
    Definir num, doble, triple Como Real;
    
    // Solicitud de datos
    Escribir "Por favor, ingresa un número:";
    Leer num;
    
    // Operaciones matemáticas
    doble <- num * 2;
    triple <- num * 3;
    
    // Mostrar resultados en pantalla
    Escribir "El doble de ", num, " es: ", doble;
    Escribir "El triple de ", num, " es: ", triple;
FinAlgoritmo
